
@{
    Layout = null;
    var user = Session["USER_BO"] as FloGestionSalles.Models.User;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>_Layout</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/roomy.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <h1>Back Office</h1>
        <nav class="navbar navbar-expand-lg" style="background-color:aquamarine">
            <div class="navbar-header">
                <h2 class="col-12">Roumix</h2>
            </div>
            <ul class="nav navbar-nav">
                <li><a href="@Url.Action("Index", "Home", new { area=""})" class="col-2 btn-dark" style="color:aquamarine">Accueil</a></li>
                <li><a href="@Url.Action("Index", "Rooms")" class="col-2 btn-dark" style="color:aquamarine">Voir les salles</a></li>
                <li><a href="@Url.Action("Create", "Rooms")" class="col-2 btn-dark" style="color:aquamarine">Ajouter une salle</a></li>
                <li><a href="@Url.Action("Index", "Categories")" class="col-2 btn-dark" style="color:aquamarine">Voir les catégories</a></li>
                <li><a href="@Url.Action("Create", "Categories")" class="col-2 btn-dark" style="color:aquamarine">Ajouter une catégorie</a></li>
                <li><a href="@Url.Action("Index", "Dashboard")" class="col-2 btn-dark" style="color:aquamarine">Back Office</a></li>
            </ul>
            <span class="navbar-text">
                Bonjour @user.Firstname @user.Lastname <a href="@Url.Action("Logout", "Authentication")" class="col-4 btn-warning"><i class="fa fa-user">Se déconnecter</i></a>
            </span>
        </nav>
        @RenderBody()
        <footer class="bg-dark">
            <p style="color:aquamarine">&copy; BACK OFFICE POEC Rouen 2018</p>
        </footer>
    </div>
    <div>
    </div>
    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @RenderSection("SectionScripts", false)
</body>
</html>
